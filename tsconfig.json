{
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"outDir": "dist",
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"allowUnreachableCode": false,
		"noUnusedParameters": true,
		"strict": true,
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"noEmitHelpers": true,
		"noUncheckedIndexedAccess": true
	}
}
